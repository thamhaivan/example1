extends ../layouts/common.pug
block content  
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger=error
  form(method="post",action="/auth/postLogin")
    div(class="form-group")
      label(for="name") Email
      input(id="name",name="email",type="text",class="form-control",value=values ? values.email  : '')
    div(class="form-group")    
      label Password
      input(name="pass",type="password",class="form-control",value= values ? values.pass : "")
    button(type="submit",class="btn btn-primary") Login