extends ../layouts/common.pug
block content  
  h1 
    span(class="mr-3") Products
  .d-flex.align-items-center    
    form(name="search",action="/users/search",class="ml-auto d-flex")
      input(name="q",type="text",class="form-control")
      button(type="submit",class="btn btn-primary") Search
  if products     
      .album.py-5.bg-light
        .row
          each product in products  
            .col-md-4
              .card.mb-4.box-shadow
                img.card-img-top(style='height: 225px; width: 100%; display: block;', src=product.image,data-holder-rendered='true')
                .card-body
                  p=product.name
                  p.card-text
                    | This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                  .d-flex.justify-content-between.align-items-center
                    .btn-group
                      button.btn.btn-sm.btn-outline-secondary(type='button') View
                      button.btn.btn-sm.btn-outline-secondary(type='button') Add to cart
                    small.text-muted 9 mins