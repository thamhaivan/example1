extends ../layouts/common.pug
block content  
  h1 Create user
  if errors
    each error in errors
      .alert.alert-danger=error
  form(method="post",action="/users/create")
    div(class="form-group")
      label(for="name") Name
      input(id="name",name="name",type="text",class="form-control",value=values ? values.name  : '')
    div(class="form-group")
      label(for="email") Email
      input(id="email",name="email",type="text",class="form-control",value=values ? values.email  : '')
    div(class="form-group")    
      label Phone
      input(name="phone",type="text",class="form-control",value= values ? values.address : "")
    button(type="submit",class="btn btn-primary") Create